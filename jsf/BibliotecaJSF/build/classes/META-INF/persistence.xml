<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="BibliotecaJSF" transaction-type="JTA">
		<jta-data-source>jdbc/Biblioteca</jta-data-source>
		<class>entidades.Autor</class>
		<class>entidades.Devolucion</class>
		<class>entidades.DevolucionPK</class>
		<class>entidades.Ejemplar</class>
		<class>entidades.Grupo</class>
		<class>entidades.GrupoPK</class>
		<class>entidades.Libro</class>
		<class>entidades.Prestamo</class>
		<class>entidades.Socio</class>
		<class>entidades.Sociopenalizado</class>
		<class>entidades.Usuario</class>
		<properties>
			<property name="eclipselink.jdbc.native-sql" value="true"/>
		</properties>
	</persistence-unit>
</persistence>
